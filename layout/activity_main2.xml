<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/busqueda2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:text="Busqueda" />

        <Button
            android:id="@+id/ingreso2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:text="INGRESO" />

        <Button
            android:id="@+id/informe2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:text="INFORME" />

        <Button
            android:id="@+id/salir2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:text="SALIR" />
    </TableRow>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/cian"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="0dp"
            app:srcCompat="@drawable/imagen" />

        <TextView
            android:id="@+id/txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="NUMERO DE ORDEN DE TRABAJO"
            android:textAlignment="center"
            android:textColor="?android:attr/colorForeground"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ot2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"
            android:hint="Ingresar numero de orden de trabajo"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:id="@+id/txt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="FECHA"
            android:textAlignment="center"
            android:textColor="@android:color/widget_edittext_dark"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/fecha2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"
            android:hint="Ingreso Fecha aaaa/mm/dd"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:id="@+id/txt3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="CLIENTE"
            android:textAlignment="center"
            android:textColor="@android:color/widget_edittext_dark"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/cliente2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"
            android:hint="Ingreso de Cliente"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:id="@+id/txt4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="DIRECCION"
            android:textAlignment="center"
            android:textColor="@android:color/widget_edittext_dark"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/direccion2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"
            android:hint="Ingreso dirección"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:id="@+id/txt5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="TELEFONO"
            android:textAlignment="center"
            android:textColor="@android:color/widget_edittext_dark"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/telefono2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"
            android:hint="Ingreso Telefono"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:id="@+id/txt6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="DESCRIPCION"
            android:textAlignment="center"
            android:textColor="@android:color/widget_edittext_dark"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/descripcion2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"
            android:hint="Ingreso de descripción"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/acceso"
                android:layout_width="120dp"
                android:layout_height="55dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="18dp"
                android:background="@android:color/white"
                android:onClick="validar"
                android:text="INGRESAR" />

            <Button
                android:id="@+id/mostrar"
                android:layout_width="120dp"
                android:layout_height="55dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="18dp"
                android:text="LIMPIAR" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>