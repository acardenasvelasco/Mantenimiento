<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <TableRow
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       app:layout_constraintTop_toTopOf="parent">

      <Button
          android:id="@+id/busqueda"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight=".25"
          android:text="Busqueda" />

      <Button
          android:id="@+id/ingreso"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight=".25"
          android:text="Ingreso" />

      <Button
          android:id="@+id/informe"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight=".25"
          android:text="Informe" />

      <Button
          android:id="@+id/salir"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight=".25"
          android:text="Salir" />
   </TableRow>

   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="50dp"
       android:background="@drawable/cian"
       android:orientation="vertical"
       app:layout_constraintTop_toTopOf="parent">

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="35dp"
          android:layout_marginTop="0dp"
          app:srcCompat="@drawable/imagen" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:orientation="horizontal"
          tools:layout_editor_absoluteY="189dp">

         <EditText
             android:id="@+id/id"
             android:layout_width="200dp"
             android:layout_height="wrap_content"
             android:background="@android:color/background_light"
             android:hint="BUSCAR REGISTRO POR ID"
             android:textAlignment="center"
             android:textColor="@android:color/background_dark" />

         <Button
             android:id="@+id/btnBuscar"
             android:layout_width="180dp"
             android:layout_height="50dp"
             android:text="BUSCAR" />


      </LinearLayout>

      <TextView
          android:id="@+id/txt2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:text="FECHA"
          android:textAlignment="center"
          android:textColor="@android:color/widget_edittext_dark"
          android:textSize="15dp"
          android:textStyle="bold" />

      <EditText
          android:id="@+id/fecha"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@android:color/background_light"
          android:textAlignment="center"
          android:textColor="@android:color/background_dark" />

      <TextView
          android:id="@+id/txt3"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:text="CLIENTE"
          android:textAlignment="center"
          android:textColor="@android:color/widget_edittext_dark"
          android:textSize="15dp"
          android:textStyle="bold" />

      <EditText
          android:id="@+id/cliente"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@android:color/background_light"
          android:textAlignment="center"
          android:textColor="@android:color/background_dark" />

      <TextView
          android:id="@+id/txt4"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:text="DIRECCION CLIENTE"
          android:textAlignment="center"
          android:textColor="@android:color/widget_edittext_dark"
          android:textSize="15dp"
          android:textStyle="bold" />

      <EditText
          android:id="@+id/cliente2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@android:color/background_light"
          android:textAlignment="center"
          android:textColor="@android:color/background_dark" />

      <TextView
          android:id="@+id/txt5"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:text="TELEFONO"
          android:textAlignment="center"
          android:textColor="@android:color/widget_edittext_dark"
          android:textSize="15dp"
          android:textStyle="bold" />

      <EditText
          android:id="@+id/direccion2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@android:color/background_light"
          android:textAlignment="center"
          android:textColor="@android:color/background_dark" />

      <TextView
          android:id="@+id/txt6"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:text="DESCRIPCION"
          android:textAlignment="center"
          android:textColor="@android:color/widget_edittext_dark"
          android:textSize="15dp"
          android:textStyle="bold" />

      <EditText
          android:id="@+id/descripcion"
          android:layout_width="match_parent"
          android:layout_height="26dp"
          android:background="@android:color/background_light"
          android:textAlignment="center"
          android:textColor="@android:color/background_dark" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal" />

   </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>